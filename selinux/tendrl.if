########################################
## <summary>
##	All of the rules required to administrate
##	an tendrl environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`tendrl_admin',`
	gen_require(`
		type tendrl_t;
		type tendrl_log_t;
		type tendrl_var_lib_t;
	type tendrl_unit_file_t;
	')

	allow $1 tendrl_t:process { signal_perms };
	ps_process_pattern($1, tendrl_t)

    tunable_policy(`deny_ptrace',`',`
        allow $1 tendrl_t:process ptrace;
    ')

	logging_search_logs($1)
	admin_pattern($1, tendrl_log_t)

	files_search_var_lib($1)
	admin_pattern($1, tendrl_var_lib_t)

	tendrl_systemctl($1)
	admin_pattern($1, tendrl_unit_file_t)
	allow $1 tendrl_unit_file_t:service all_service_perms;
	optional_policy(`
		systemd_passwd_agent_exec($1)
		systemd_read_fifo_file_passwd_run($1)
	')
')

