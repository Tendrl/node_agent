########################################
## <summary>
##	Execute tendrl server in the tendrl domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed to transition.
##	</summary>
## </param>
#
interface(`tendrl_systemctl',`
	gen_require(`
		type tendrl_t;
		type tendrl_unit_file_t;
	')

	systemd_exec_systemctl($1)
        systemd_read_fifo_file_passwd_run($1)
	allow $1 tendrl_unit_file_t:file read_file_perms;
	allow $1 tendrl_unit_file_t:service manage_service_perms;

	ps_process_pattern($1, tendrl_t)
')

